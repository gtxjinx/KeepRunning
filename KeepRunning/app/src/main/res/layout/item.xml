<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_view">
    <ImageView
        android:id="@+id/pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/shuqian"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/listText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#000000"
        android:text="demo"
        android:layout_toRightOf="@id/pic"
        android:layout_alignTop="@id/pic"/>

    <TextView
        android:id="@+id/listText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ffffbb33"
        android:text="demo"
        android:layout_alignBottom="@id/pic"
        android:layout_below="@id/listText1"
        android:layout_alignLeft="@id/listText1"
        android:textAlignment="center"
        android:layout_marginBottom="-5dp"/>




</RelativeLayout>
